{
  "name": "back-end-academic-module",
  "version": "1.0.0",
  "main": "index.js",
  "prisma": {
    "schema": "src/infra/database/prisma/schema.prisma"
  },
  "_moduleAliases": {
    "@": "dist"
  },
  "scripts": {
    "dev": "ts-node-dev --project tsconfig.json --require tsconfig-paths/register --respawn --transpile-only src/server.ts",
    "build": "tsc",
    "build:swagger": "node scripts/generate-swagger.ts",
    "swagger:generate": "node scripts/generate-swagger.ts",
    "swagger:serve": "node src/infra/http/server.ts",
    "start": "node -r module-alias/register dist/server.js",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "test": "cross-env NODE_ENV=test jest --env=node --detectOpenHandles",
    "test:watch": "cross-env NODE_ENV=test jest --watch --env=node",
    "test:coverage": "cross-env NODE_ENV=test jest --coverage --env=node",
    "test:e2e": "cross-env NODE_ENV=test jest --testPathPattern=\\.e2e\\.spec\\.ts$ --env=node",
    "test:unit": "cross-env NODE_ENV=test jest --testPathPattern=\\.spec\\.ts$ --testPathIgnore=\\.e2e\\.spec\\.ts$ --testPathIgnore=\\.integration\\.spec\\.ts$ --env=node",
    "test:integration": "cross-env NODE_ENV=test jest --testPathPattern=\\.integration\\.spec\\.ts$ --env=node"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "@prisma/client": "^6.17.1",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "module-alias": "^2.2.3",
    "prisma": "^6.17.1",
    "swagger-autogen": "^2.23.7",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "yamljs": "^0.3.0",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@eslint/js": "^9.37.0",
    "@types/bcrypt": "^6.0.0",
    "@types/bcryptjs": "^3.0.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.8.0",
    "@types/supertest": "^6.0.3",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@types/yamljs": "^0.2.34",
    "cross-env": "^10.1.0",
    "dotenv-cli": "^10.0.0",
    "eslint": "^9.37.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "jest": "^30.2.0",
    "lint-staged": "^16.2.4",
    "prettier": "^3.6.2",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.5",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.1"
  }
}
